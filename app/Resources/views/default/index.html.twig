    <section class="articles">
            <div class="espace"></div>
            <div class="container">
                <div class="playerCards">
                    <div class="row justify-content-center">
                        <h1>Derniers articles</h1>
                        {% for article in articles %}
                            <div class="d-flex flex-row">
                                <div class="col-md-5">

                                <img src="{{ article.pictures }}" class="img-thumbnail" alt="Card image cap">
                                </div>
                                <div class="espace2"></div>


                                <div class="col-md-7">

                                <p class="card-text">{{ article.title }}</p>
                                    <hr>
                                    <p class="card-text2">{{ article.content }}</p></div>
                                </div>
                            <a role="button" class="btn btn-success float-right mt-2" href="{{ path('article_show', { 'id': article.id }) }}"> Lire l'article</a>
                        {% endfor %}
                                </div>
                            </div>

            </div>

    </section>
    <div class="espace"></div>

