{% extends 'layout.html.twig' %}

{% block body %}

    <div class="jumbotron text-center">
        <h1>Liste des équipes</h1>
        <p>Et des sponsors, faut pas déconner</p>
    </div>

    <div class="container">
        <div class="row">
            <img class="card-img-top sizeImg" src="{{ team.flag }}" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title text-center"> Equipe : {{ team.name }}</h5>
                <p class="card-text text-justify size"> Description : {{ team.description }}</p>
            </div>
        </div>

        {% for player in team.players %}
        <div class="row">

        <div class="playerCards">
            <div class="row">
                <div class="card">
                    <img src="{{ player.pictures }}" class="playerPics" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ player.name }}</h5>
                        {#<p class="card-text">{{ player.description }}</p>#}
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

    </div>

    </div>
{% endblock %}