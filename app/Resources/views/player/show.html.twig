{% extends 'base.html.twig' %}
{% block body %}
    {% include 'admin/navbar.html.twig' %}
<div class="container">
    <div class="card ">
        <div class="card-header">
             Afficher un joueur
        </div>
        <table class="table table-striped">
            <div class="espace"></div>
            <div class="container">
                <div class="playerCards">
                    <div class="row justify-content-center">
                        <div class="col-md-3">
                            <img src="{{ player.pictures }}" class="img-thumbnail" alt="Card image cap">
                            <h5 class="card-title">{{ player.name }} {{ player.firstname }}</h5>
                        </div>
                        <div class="col-md-6">
                            <div class="description"> {{ player.description }}</div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="card">
                                    <h5 class="card">{{ player.numberPlayer }}</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            <a href="{{ path('player_edit', { 'id': player.id }) }}" role="button" class="btn btn-success" style="width:100%;">Editer</a>

            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger" style="width:100%;">
            {{ form_end(delete_form) }}
            </div></table></div></div>
{% endblock %}
