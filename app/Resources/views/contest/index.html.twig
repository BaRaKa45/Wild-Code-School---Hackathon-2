{% extends 'base.html.twig' %}
{% block body %}
    {% include 'admin/navbar.html.twig' %}
    <div class="container">
        <div class="card ">
            <div class="card-header">
                List des matches
            </div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Resultat</th>
                    <th>Pays 1</th>
                    <th>Pays 2</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for contest in contests %}
                    <tr>
                        <td><a href="{{ path('contest_show', { 'id': contest.id }) }}">{{ contest.id }}</a></td>
                        <td>{% if contest.date %}{{ contest.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ contest.resultTeam1 }} - {{ contest.resultTeam2 }}</td>
                        <td><img class="flag-admin" src="{{ contest.team1.flag }}"
                                 alt="{{ contest.team1 }}"> {{ contest.team1 }}</td>
                        <td><img class="flag-admin" src="{{ contest.team2.flag }}"
                                 alt="{{ contest.team2 }}"> {{ contest.team2 }}</td>
                        <td>
                            <ul>
                                <a role="button" class="btn btn-success"
                                   href="{{ path('contest_show', { 'id': contest.id }) }}">Voir</a>
                                <a role="button" class="btn btn-danger"
                                   href="{{ path('contest_edit', { 'id': contest.id }) }}">Modifier</a>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('contest_new') }}" role="button" class="btn btn-primary">Ajouter un match</a>
        </div>
    </div>
{% endblock %}
